FROM maven:3.9.4-eclipse-temurin-17 AS builder
WORKDIR /build
COPY pom.xml .
COPY src ./src
RUN mvn -DskipTests package

FROM eclipse-temurin:17-jre
WORKDIR /app
COPY --from=builder /build/target/service-catalog-java-0.1.0.jar /app/service-catalog.jar
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "/app/service-catalog.jar"]
